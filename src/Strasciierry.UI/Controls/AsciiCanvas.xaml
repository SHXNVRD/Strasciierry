<?xml version="1.0" encoding="utf-8"?>
<local:UserControlBase x:Class="Strasciierry.UI.Controls.AsciiCanvas"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:local="using:Strasciierry.UI.Controls"
                       xmlns:converters="using:Strasciierry.UI.Converters"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       mc:Ignorable="d">

    <local:UserControlBase.Resources>
        <converters:FontStyleToTextDecorationsConverter x:Key="FontStyleToTextDecorationsConverter" />
        <converters:SystemDrawingColorToBrushConverter x:Key="SystemDrawingColorToBrushConverter" />
        <converters:FontStyleToFontWeightConverter x:Key="FontStyleToFontWeightConverter" />
        <converters:SystemDrawingFontStyleToWindowsUiFontStyleConverter x:Key="FontStyleToFontStyleConverter" />
    </local:UserControlBase.Resources>
    
    <ScrollView ZoomMode="Enabled"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center">

            <Grid.Resources>
                <MenuFlyout x:Name="CanvasActionMenu">
                    <MenuFlyoutItem Text="Копировать"
                                    Click="OnCopyClick">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE8C8;" />
                        </MenuFlyoutItem.Icon>
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control"
                                                 Key="C" />
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="Вставить"
                                    Click="OnPasteClick">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE77F;" />
                        </MenuFlyoutItem.Icon>
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control"
                                                 Key="V" />
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="Вырезать"
                                    Click="OnCutClick">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE8C6;" />
                        </MenuFlyoutItem.Icon>
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control"
                                                 Key="X" />
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>

                </MenuFlyout>
            </Grid.Resources>

            <ItemsRepeater x:Name="CanvasRepeater"
                           ItemsSource="{x:Bind Cells, Mode=OneWay}"
                           VirtualizingStackPanel.VirtualizationMode="Recycling"
                           CacheMode="BitmapCache"
                           FlyoutBase.AttachedFlyout="{x:Bind CanvasActionMenu, Mode=OneWay}"
                           FlowDirection="LeftToRight"
                           RightTapped="CanvasRepeater_RightTapped">

                <ItemsRepeater.Layout>
                    <UniformGridLayout ItemsStretch="None"
                                       MaximumRowsOrColumns="{x:Bind Rows, Mode=OneWay}"
                                       MinItemHeight="19"
                                       MinItemWidth="10"
                                       MinColumnSpacing="0"
                                       MinRowSpacing="0" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="local:AsciiCanvasCell">
                        <ContentControl Style="{StaticResource CellContentStyle}"
                                        DataContext="{x:Bind}"
                                        PointerPressed="OnCellPointerPressed"
                                        PointerEntered="OnCellPointerEntered"
                                        PointerExited="OnCellPointerExited"
                                        Background="{x:Bind Background, Converter={StaticResource SystemDrawingColorToBrushConverter}, Mode=OneWay}">

                            <TextBlock Text="{x:Bind Character, Mode=OneWay}"
                                       FontFamily="{x:Bind FontFamily.Name, Mode=OneWay}"
                                       Foreground="{x:Bind Foreground, Converter={StaticResource SystemDrawingColorToBrushConverter},Mode=OneWay}"
                                       TextDecorations="{x:Bind FontStyle, Converter={StaticResource FontStyleToTextDecorationsConverter}, Mode=OneWay}"
                                       FontStyle="{x:Bind FontStyle, Converter={StaticResource FontStyleToFontStyleConverter}, Mode=OneWay}"
                                       FontWeight="{x:Bind FontStyle, Converter={StaticResource FontStyleToFontWeightConverter}, Mode=OneWay}"
                                       FontSize="14"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center" />
                        </ContentControl>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

            <Canvas x:Name="SelectionLayer"
                    IsHitTestVisible="False" />
        </Grid>
    </ScrollView>
</local:UserControlBase>